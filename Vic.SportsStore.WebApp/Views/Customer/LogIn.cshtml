@model Vic.SportsStore.WebApp.Models.CustomerLoginViewModel
@{
    ViewBag.Title = "LogIn";
}

<h2>Customer Log In</h2>

<div class="form-horizontal">
    <div class="panel-heading">
        <h5>Please enter your Email and Password to login</h5>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <span class="col-sm-offset-2"> @Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Email:</label>
                <div class="col-sm-10">@Html.TextBoxFor(x => x.Email, new { @class = "form-control" , type = "email"})</div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class=" col-sm-10">
                    @Html.PasswordFor(x => x.Pwd, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label><input type="checkbox" name="remember"/>Remember me</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                     <label><input type="submit" class="btn btn-primary"/></label>
                </div>
            </div>
        }
    </div>
    <div class="">
        <span class="col-sm-offset-2 col-sm-10">New Customer? 
        @Html.ActionLink("Register Now", "Register", "Customer")
         </span>
    </div>

</div>